<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--namespace
要唯一,需要关联mapper接口-->
<mapper namespace="ka.shibun.xinyuan.mapper.EmployeeMapper">
    <!--Employee getById(Long id);-->
    <select id="getById" parameterType="long" resultType="Employee">
      select * from t_employee where id=#{id}
    </select>

    <!--List<Employee> loadByQuery(EmployeeQuery employeequery);-->
    <select id="loadByQuery" parameterType="EmployeeQuery" resultType="Employee">
        select * from t_employee
    </select>

    <!--void save(Employee employee);-->
    <insert id="save" parameterType="Employee">
        INSERT into t_employee (username, password) VALUES (#{username},#{password})
    </insert>

    <!--void del(Long id);-->
    <delete id="del" parameterType="long">
        delete from t_employee where id = #{id}
    </delete>
</mapper>
